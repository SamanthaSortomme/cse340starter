<h1><%= title %></h1>

<% if (messages() && messages().success) { %>
  <div class="flash-message success">
    <%= messages().success %>
  </div>
<% } else if (messages() && messages().error) { %>
  <div class="flash-message error">
    <%= messages().error %>
  </div>
<% } %>
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <%  }) %>
  </ul>
<% } %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>
<p>You're logged in</p>
<% if (locals.accountData.account_type === "Admin" || locals.accountData.account_type === "Employee") { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv">Inventory Management</a></p>
<% } %>

<p><a href="/account/update/<%- locals.accountData.account_id %>">Update Account information</a></p>

<% if (flash) { %>
  <% if (flash.notice) { %>
    <ul class="notice">
      <% flash.notice.forEach(msg => { %>
        <li><%= msg %></li>
      <%  }) %>
    </ul>
  <% } %>
<% } %>