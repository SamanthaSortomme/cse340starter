<h1><%= title %></h1>

<% if (messages() && messages().success) { %>
  <div class="flash-message success">
    <%= messages().success %>
  </div>
<% } else if (messages() && messages().error) { %>
  <div class="flash-message error">
    <%= messages().error %>
  </div>
<% } %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>


<%- messages() %>


<form action="/account/login" method="POST">
  <div>
    <label for="email"> Your Email:</label>
    <input type="email" id="email" name="account_email" required>
  </div>
  <div>
    <label for="password">Password:</label>
    <input type="password" id="password" name="account_password" required>
  </div>
  <button type="submit">Login</button>
</form>
<a href="/account/register" class="create-account">Create an account</a>